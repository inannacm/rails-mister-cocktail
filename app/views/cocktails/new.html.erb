<div class="container-1">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h1>Add a cocktail</h1>
      <%= simple_form_for [@cocktail] do |f| %>
      <%= f.input :name, label: "Name" %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>

      <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
